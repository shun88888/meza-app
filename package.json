{
  "name": "meza-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:mobile": "next dev -H 0.0.0.0 -p 3000",
    "mobile": "next dev -H 0.0.0.0 -p 3000",
    "mobile:https": "next dev -H 0.0.0.0 -p 3000 --experimental-https",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "qr": "node mobile-qr.js",
    "install:mobile": "npm install && npm run qr",
    "clean": "rm -rf .next && rm -rf node_modules/.cache",
    "dev:clean": "npm run clean && npm run dev",
    "setup": "node scripts/setup-all.js",
    "setup:db": "node scripts/setup-database.js",
    "setup:vapid": "node scripts/generate-vapid-keys.js",
    "setup:stripe": "node scripts/setup-stripe.js",
    "setup:complete": "npm run setup && echo 'âœ… Setup complete! Copy env-template.txt to .env.local and run npm run dev'",
    "stripe:setup": "node scripts/setup-stripe.js",
    "stripe:listen": "stripe listen --forward-to localhost:3000/api/webhooks/stripe",
    "stripe:test": "npm run stripe:setup && npm run dev",
    "webhook:setup": "node scripts/setup-webhook.js",
    "webhook:listen": "stripe listen --forward-to localhost:3000/api/webhooks/stripe",
    "webhook:test": "npm run webhook:setup && npm run dev"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.0.2",
