    "leaflet": "^1.9.4",
    "lucide-react": "^0.294.0",
    "next": "14.0.4",
    "next-pwa": "^5.6.0",
    "qrcode-terminal": "^0.12.0",
    "react": "^18",
    "react-dom": "^18",
    "react-leaflet": "^4.2.1",
    "react-swipeable": "^7.0.2",
    "stripe": "^14.9.0",
    "tailwind-merge": "^2.1.0",
    "tailwindcss-animate": "^1.0.7",
    "vercel": "^44.4.1",
    "web-push": "^3.6.7"
