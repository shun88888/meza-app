{
  "name": "meza-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "BROWSER=none next dev",
    "dev:mobile": "next dev -H 0.0.0.0 -p 3000",
    "mobile": "next dev -H 0.0.0.0 -p 3000",
    "mobile:https": "next dev -H 0.0.0.0 -p 3000 --experimental-https",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test && npm run test:e2e",
    "qr": "node mobile-qr.js",
    "install:mobile": "npm install && npm run qr",
    "clean": "rm -rf .next && rm -rf node_modules/.cache",
    "dev:clean": "npm run clean && npm run dev",
    "setup": "node scripts/setup-all.js",
    "setup:db": "node scripts/setup-database.js",
    "setup:vapid": "node scripts/generate-vapid-keys.js",
    "setup:stripe": "node scripts/setup-stripe.js",
    "setup:complete": "npm run setup && echo 'âœ… Setup complete! Copy env-template.txt to .env.local and run npm run dev'",
    "stripe:setup": "node scripts/stripe-setup.js",
    "stripe:listen": "stripe listen --forward-to localhost:3001/api/webhooks/stripe",
    "stripe:test": "stripe trigger payment_intent.succeeded",
    "webhook:setup": "node scripts/setup-webhook.js",
    "webhook:listen": "stripe listen --forward-to localhost:3000/api/webhooks/stripe",
    "webhook:test": "npm run webhook:setup && npm run dev",
    "setup:payment-table": "node scripts/setup-payment-methods-table.js",
    "db:setup": "node scripts/setup-database-auto.js",
    "db:migrate": "supabase db push",
    "db:reset": "supabase db reset",
    "db:types": "supabase gen types typescript --local > src/types/database.types.ts",
    "postinstall": "npm run db:setup"
  },
  "dependencies": {
    "@googlemaps/js-api-loader": "^1.16.10",
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-slot": "^1.2.3",
    "@stripe/react-stripe-js": "^2.4.0",
    "@stripe/stripe-js": "^2.4.0",
    "@supabase/auth-helpers-nextjs": "^0.8.7",
    "@supabase/supabase-js": "^2.38.5",
    "@types/google.maps": "^3.58.1",
    "@types/react-swipeable": "^4.3.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.0.0",
    "date-fns": "^3.0.6",
    "framer-motion": "^10.18.0",
    "lucide-react": "^0.294.0",
    "motion": "^12.23.6",
    "next": "14.0.4",
    "next-pwa": "^5.6.0",
    "next-themes": "^0.4.6",
    "pg": "^8.16.3",
    "qrcode-terminal": "^0.12.0",
    "react": "^18",
    "react-dom": "^18",
    "react-icons": "^5.5.0",
    "react-swipeable": "^7.0.2",
    "react-use-measure": "^2.1.7",
    "stripe": "^14.9.0",
    "supabase": "^2.31.8",
    "tailwind-merge": "^2.1.0",
    "tailwindcss-animate": "^1.0.7",
    "vercel": "^44.4.1",
    "web-push": "^3.6.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.5",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/web-push": "^3.6.3",
    "autoprefixer": "^10.0.1",
    "critters": "^0.0.23",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5",
    "webpack": "^5.0.0"
  }
}
